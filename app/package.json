{
  "name": "mev",
  "productName": "MeV",
  "description": "Application de gestion et d'Ã©valuation des modules pour l'ETML",
  "private": true,
  "version": "3.6.9",
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "concurrently \"tsc --noEmit --watch\" \"cross-env VITE_DEV_SERVER_PORT=5273 vite --port 5273 --strictPort --open --host\"",
    "dev:electron": "concurrently \"cross-env NODE_ENV=development VITE_DEV_SERVER_PORT=5273 vite --port 5273 --strictPort\" \"wait-on http://localhost:5273 && cross-env NODE_ENV=development VITE_DEV_SERVER_PORT=5273 electron .\"",
    "build": "tsc -b && vite build",
    "clean": "node -e \"const fs = require('fs'); const rm = (p) => { try { fs.existsSync(p) && fs.rmSync(p, {recursive: true, force: true}); } catch(e) { console.warn('Non-fatal rm error:', p); } }; rm('dist'); rm('dist-electron'); rm('release'); rm('release-new');\"",
    "build:electron": "npm run clean && npm run build && tsc -p electron/tsconfig.json && electron-builder",
    "build:win": "cross-env CSC_LINK=\"\" CSC_KEY_PASSWORD=\"\" WIN_CSC_LINK=\"\" SKIP_WINCODESIN=true npm run clean && npm run build && tsc -p electron/tsconfig.json && electron-builder --win",
    "build:mac": "npm run clean && npm run build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "build:linux": "npm run clean && npm run build && tsc -p electron/tsconfig.json && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "migrate:excel": "node scripts/migrate-excel.mjs"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.8",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@react-pdf/renderer": "^4.3.2",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.18",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "dexie": "^4.3.0",
    "dexie-react-hooks": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.8.3",
    "html-react-parser": "^5.2.17",
    "jszip": "^3.10.1",
    "lucide-react": "^0.570.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.71.1",
    "tailwind-merge": "^3.4.1",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.4"
  },
  "build": {
    "appId": "ch.etml.mev",
    "productName": "MeV",
    "publish": {
      "provider": "github",
      "owner": "ETML-HCS",
      "repo": "MeV"
    },
    "directories": {
      "output": "dist/release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.education",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeader": "build/installer-header.bmp"
    }
  }
}
